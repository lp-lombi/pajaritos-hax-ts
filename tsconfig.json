{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "./dist",
    "strict": true,
    "lib": ["ES2021.String"],
    "paths": {
      "@room/*": ["./room/*"],
      "@shared/*": ["./shared/*"]
    },
    "rootDirs": ["./room", "./shared"]
  },
  "include": ["server/src", "server/index.ts"],
  "exclude": ["node_modules"]
}
